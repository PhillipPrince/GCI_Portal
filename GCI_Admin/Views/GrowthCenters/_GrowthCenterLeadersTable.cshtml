@model List<GCI_Admin.Models.GrowthCenterLeader>

<div class="card shadow-sm">
    <div class="table-responsive p-3">
        <table id="centerLeadersTable" class="table table-striped table-hover align-middle datatable">
            <thead class="table-light">
                <tr>
                    <th>Leader Name</th>
                    <th>Center</th>
                    <th>Bio</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Active</th>
                    <th class="text-end">Actions</th>
                </tr>

                <!-- Search Row -->
                <tr>
                    <th><input type="text" placeholder="Search Leader" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Search Center" class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Search Bio" class="form-control form-control-sm" /></th>
                    <th><input type="date" class="form-control form-control-sm" /></th>
                    <th><input type="date" class="form-control form-control-sm" /></th>
                    <th>
                        <select class="form-control form-control-sm">
                            <option value="">All</option>
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var leader in Model)
                {
                    <tr>
                        <td>@leader.Member.FirstName @leader.Member.OtherNames</td>
                        <td>@leader.GrowthCenter.CenterName</td>
                        <td>@leader.Bio</td>
                        <td>@leader.StartDate.ToString("dd MMM yyyy")</td>
                        <td>@(leader.EndDate.HasValue? leader.EndDate.Value.ToString("dd MMM yyyy") : "-")</td>
                        <td>@(leader.IsActive ? "Yes" : "No")</td>
                        <td class="text-end">

                            <!-- View -->
                            <button class="btn btn-sm btn-outline-info"
                                    onclick="openLeaderModal('@Url.Action("Details", "GrowthCenters", new { id = leader.GrowthCenterLeaderId })')">
                                <i class="fa fa-eye"></i>
                            </button>

                            <!-- Edit -->
                            <button class="btn btn-sm btn-outline-warning"
                                    onclick="openLeaderModal('@Url.Action("Edit", "GrowthCenters", new { id = leader.GrowthCenterLeaderId })')">
                                <i class="fa fa-edit"></i>
                            </button>

                            <!-- Delete -->
                            <button class="btn btn-sm btn-outline-danger"
                                    onclick="deleteLeader(@leader.GrowthCenterLeaderId)">
                                <i class="fa fa-trash"></i>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>