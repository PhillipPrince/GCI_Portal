@model GCI_Admin.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Title & Actions -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Dashboard</h2>
        <p class="text-muted mb-0">Welcome back, Admin! Here's what's happening with your church.</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#reportModal">
            <i class="fa fa-download me-2"></i>Export Report
        </button>
        <button class="btn btn-primary">
            <i class="fa fa-sync-alt me-2"></i>Refresh Data
        </button>
    </div>
</div>

<!-- KPI CARDS - Enhanced with gradients and icons -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Members</h6>
                        <h3 class="fw-bold mb-0">@Model.TotalMembers.ToString("N0")</h3>
                        <small class="text-success"><i class="fa fa-arrow-up me-1"></i>+12% from last month</small>
                    </div>
                </div>
                <div class="progress" style="height: 4px;">
                    <div class="progress-bar bg-primary" style="width: 75%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-user-check fa-2x text-success"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Active Members</h6>
                        <h3 class="fw-bold mb-0">@Model.TotalActiveMembers.ToString("N0")</h3>
                        <small class="text-success"><i class="fa fa-arrow-up me-1"></i>+8% from last month</small>
                    </div>
                </div>
                <div class="progress" style="height: 4px;">
                    <div class="progress-bar bg-success" style="width: 82%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-calendar fa-2x text-warning"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Upcoming Events</h6>
                        <h3 class="fw-bold mb-0">@Model.UpcomingEvents.ToString("N0")</h3>
                        <small class="text-danger"><i class="fa fa-arrow-down me-1"></i>2 this week</small>
                    </div>
                </div>
                <div class="progress" style="height: 4px;">
                    <div class="progress-bar bg-warning" style="width: 45%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-money-bill-wave fa-2x text-danger"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Giving</h6>
                        <h3 class="fw-bold mb-0">KES 1,250,000</h3>
                        <small class="text-success"><i class="fa fa-arrow-up me-1"></i>+15% from last month</small>
                    </div>
                </div>
                <div class="progress" style="height: 4px;">
                    <div class="progress-bar bg-danger" style="width: 68%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CHARTS SECTION -->
<div class="row g-4 mb-4">
    <div class="col-md-7">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">📈 Member Growth</h6>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary active">Weekly</button>
                        <button class="btn btn-outline-secondary">Monthly</button>
                        <button class="btn btn-outline-secondary">Yearly</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <canvas id="membersChart" height="120"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">💰 Monthly Giving</h6>
                    <span class="badge bg-success">+23% vs last year</span>
                </div>
            </div>
            <div class="card-body">
                <canvas id="givingChart" height="120"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- DATA PANELS -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">📅 Upcoming Events</h6>
                    <a href="@Url.Action("Index", "Events")" class="btn btn-link btn-sm p-0">View All →</a>
                </div>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 border-0 d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="fa fa-church text-primary"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Sunday Service</h6>
                            <small class="text-muted"><i class="fa fa-clock me-1"></i>Feb 11, 9:00 AM</small>
                        </div>
                        <span class="badge bg-primary">Today</span>
                    </div>
                    <div class="list-group-item px-0 border-0 d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="fa fa-users text-success"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Youth Conference</h6>
                            <small class="text-muted"><i class="fa fa-clock me-1"></i>Feb 18, 10:00 AM</small>
                        </div>
                        <span class="badge bg-secondary">156 going</span>
                    </div>
                    <div class="list-group-item px-0 border-0 d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="fa fa-user-tie text-warning"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Leadership Summit</h6>
                            <small class="text-muted"><i class="fa fa-clock me-1"></i>Mar 2, 8:30 AM</small>
                        </div>
                        <span class="badge bg-secondary">45 going</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">⏳ Pending Approvals</h6>
                    <span class="badge bg-danger">10 Total</span>
                </div>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fa fa-certificate text-primary me-2"></i>
                            <span>Member Certifications</span>
                        </div>
                        <span class="badge bg-primary rounded-pill">5</span>
                    </div>
                    <div class="list-group-item px-0 border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fa fa-hand-holding-heart text-success me-2"></i>
                            <span>Ministry Join Requests</span>
                        </div>
                        <span class="badge bg-success rounded-pill">3</span>
                    </div>
                    <div class="list-group-item px-0 border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fa fa-ticket-alt text-warning me-2"></i>
                            <span>Event Registrations</span>
                        </div>
                        <span class="badge bg-warning rounded-pill">2</span>
                    </div>
                </div>
                <hr class="my-3">
                <a href="@Url.Action("Approvals", "Admin")" class="btn btn-outline-primary w-100">
                    <i class="fa fa-check-circle me-2"></i>Review All Approvals
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h6 class="fw-bold mb-0">⚡ Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Create", "Members")" class="btn btn-primary text-start d-flex align-items-center">
                        <i class="fa fa-user-plus me-3"></i>
                        <div>
                            <strong>Add New Member</strong><br>
                            <small class="opacity-75">Register a new church member</small>
                        </div>
                    </a>

                    <a href="@Url.Action("Create", "Events")" class="btn btn-success text-start d-flex align-items-center">
                        <i class="fa fa-calendar-plus me-3"></i>
                        <div>
                            <strong>Create Event</strong><br>
                            <small class="opacity-75">Schedule a church event</small>
                        </div>
                    </a>

                    <a href="@Url.Action("Create", "Announcements")" class="btn btn-warning text-start d-flex align-items-center">
                        <i class="fa fa-bullhorn me-3"></i>
                        <div>
                            <strong>New Announcement</strong><br>
                            <small class="opacity-75">Share with congregation</small>
                        </div>
                    </a>

                    <a href="@Url.Action("Giving", "Reports")" class="btn btn-info text-start d-flex align-items-center">
                        <i class="fa fa-chart-pie me-3"></i>
                        <div>
                            <strong>Financial Report</strong><br>
                            <small class="opacity-75">View giving summary</small>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MEMBERS TAB SECTION -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
        <h6 class="fw-bold mb-0">👥 Member Management</h6>
    </div>
    <div class="card-body">
        <!-- TABS -->
        <ul class="nav nav-tabs nav-tabs-custom mb-3" id="memberTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#activeMembers" type="button" role="tab">
                    Active Members <span class="badge bg-primary ms-2">@Model.ActiveMembers.Count</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="membership-tab" data-bs-toggle="tab" data-bs-target="#membershipClass" type="button" role="tab">
                    Membership Class <span class="badge bg-warning ms-2">@Model.MembershipClassMembers.Count</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="nonmembers-tab" data-bs-toggle="tab" data-bs-target="#nonMembers" type="button" role="tab">
                    Non-Members <span class="badge bg-secondary ms-2">@Model.NonMembers.Count</span>
                </button>
            </li>
        </ul>

        <!-- TAB CONTENT -->
        <div class="tab-content" id="memberTabsContent">
            <div class="tab-pane fade show active" id="activeMembers" role="tabpanel">
                @await Html.PartialAsync("_MembersTablePartial", Model.ActiveMembers)
            </div>
            <div class="tab-pane fade" id="membershipClass" role="tabpanel">
                @await Html.PartialAsync("_MembersTablePartial", Model.MembershipClassMembers)
            </div>
            <div class="tab-pane fade" id="nonMembers" role="tabpanel">
                @await Html.PartialAsync("_MembersTablePartial", Model.NonMembers)
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats Footer -->
<div class="row g-4 mt-4">
    <div class="col-md-3 col-6">
        <div class="text-center">
            <h4 class="fw-bold mb-1">@DateTime.Now.ToString("MMM")</h4>
            <small class="text-muted">Current Month</small>
        </div>
    </div>
    <div class="col-md-3 col-6">
        <div class="text-center">
            <h4 class="fw-bold mb-1">78%</h4>
            <small class="text-muted">Attendance Rate</small>
        </div>
    </div>
    <div class="col-md-3 col-6">
        <div class="text-center">
            <h4 class="fw-bold mb-1">24</h4>
            <small class="text-muted">New Visitors</small>
        </div>
    </div>
    <div class="col-md-3 col-6">
        <div class="text-center">
            <h4 class="fw-bold mb-1">15</h4>
            <small class="text-muted">Active Ministries</small>
        </div>
    </div>
</div>

<!-- Report Modal -->
<div class="modal fade" id="reportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Select report type:</p>
                <div class="list-group">
                    <button class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="fa fa-file-pdf text-danger me-3 fs-4"></i>
                        <div>
                            <strong>Membership Report</strong><br>
                            <small>Complete member directory with details</small>
                        </div>
                    </button>
                    <button class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="fa fa-file-excel text-success me-3 fs-4"></i>
                        <div>
                            <strong>Financial Summary</strong><br>
                            <small>Giving and contribution report</small>
                        </div>
                    </button>
                    <button class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="fa fa-file-word text-primary me-3 fs-4"></i>
                        <div>
                            <strong>Events Calendar</strong><br>
                            <small>Upcoming events and activities</small>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <style>
        .nav-tabs-custom .nav-link {
            color: #6c757d;
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
        }

        .nav-tabs-custom .nav-link.active {
            color: #0d6efd;
            background: none;
            border-bottom: 3px solid #0d6efd;
        }

        .nav-tabs-custom .nav-link .badge {
            font-weight: normal;
        }

        .card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }

        .btn-outline-primary, .btn-outline-success, .btn-outline-warning {
            position: relative;
            overflow: hidden;
        }

        .btn-outline-primary:hover, .btn-outline-success:hover, .btn-outline-warning:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .progress {
            border-radius: 10px;
        }

        .bg-opacity-10 {
            opacity: 0.1;
        }
    </style>

    <script>
        // Enhanced charts with better styling
        new Chart(document.getElementById('membersChart'), {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Members',
                    data: [200, 350, 520, 690, 890, 1250],
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    borderWidth: 3,
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#0d6efd',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            display: true,
                            color: 'rgba(0,0,0,0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        new Chart(document.getElementById('givingChart'), {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Giving (KES)',
                    data: [120000, 200000, 180000, 250000, 210000, 300000],
                    backgroundColor: [
                        'rgba(13, 110, 253, 0.8)',
                        'rgba(25, 135, 84, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(13, 202, 240, 0.8)',
                        'rgba(111, 66, 193, 0.8)'
                    ],
                    borderRadius: 6,
                    borderSkipped: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'KES ' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });

        // Initialize DataTable
        $(document).ready(function() {
            var table = $('#membersTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[1, "asc"]],
                language: {
                    search: "Search members:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ members",
                    paginate: {
                        first: '<i class="fa fa-angle-double-left"></i>',
                        previous: '<i class="fa fa-angle-left"></i>',
                        next: '<i class="fa fa-angle-right"></i>',
                        last: '<i class="fa fa-angle-double-right"></i>'
                    }
                }
            });

            // Custom search functionality
            $('#membersTable_filter input').addClass('form-control form-control-sm');
        });

        // SweetAlert2 functions
        function joinMembershipClass(memberId) {
            Swal.fire({
                title: 'Confirm Action',
                text: 'Send this member to membership class?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, proceed',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Members/JoinMembershipClass', { id: memberId }, function() {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Member moved to membership class',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    });
                }
            });
        }

        function makeFullMember(memberId) {
            Swal.fire({
                title: 'Confirm Upgrade',
                text: 'Make this member a full member?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, upgrade member',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Members/MakeFullMember', { id: memberId }, function() {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Member upgraded successfully',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    });
                }
            });
        }
    </script>
}