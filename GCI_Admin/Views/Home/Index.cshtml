<!-- Required JavaScript (add before closing body tag) -->
<script>
    // Optional: Enhance modal functionality
    document.addEventListener('DOMContentLoaded', function() {
        const addMemberModal = document.getElementById('addMemberModal');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const modalContent = document.getElementById('modalContent');
        const saveBtn = document.getElementById('saveMemberBtn');

        // Show loading state when modal is opened
        addMemberModal.addEventListener('show.bs.modal', function() {
            loadingSpinner.classList.remove('d-none');
            modalContent.classList.add('d-none');

            // Simulate loading (replace with actual loading logic)
            setTimeout(() => {
                loadingSpinner.classList.add('d-none');
                modalContent.classList.remove('d-none');
            }, 500);
        });

        // Handle save button with loading state
        saveBtn.addEventListener('click', function() {
            const originalText = this.innerHTML;
            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Saving...';

            // Simulate save (replace with actual save logic)
            setTimeout(() => {
                this.disabled = false;
                this.innerHTML = originalText;

                // Show success state briefly
                this.classList.add('btn-success');
                this.innerHTML = '<i class="bi bi-check-lg me-2"></i>Saved!';

                setTimeout(() => {
                    this.classList.remove('btn-success');
                    this.innerHTML = originalText;

                    // Close modal (optional)
                    // bootstrap.Modal.getInstance(addMemberModal).hide();
                }, 1500);
            }, 2000);
        });

        // Reset form when modal is closed
        addMemberModal.addEventListener('hidden.bs.modal', function() {
            loadingSpinner.classList.add('d-none');
            modalContent.classList.remove('d-none');
            saveBtn.disabled = false;
            saveBtn.classList.remove('btn-success');
        });
    });
</script>
