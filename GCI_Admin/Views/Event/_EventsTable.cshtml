@model List<GCI_Admin.Models.Event>

<div class="card shadow-sm">
    <div class="table-responsive p-3">
        <table id="eventsTable" class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Paid</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th class="text-end">Actions</th>
                </tr>
                <tr>
                    <th>
                        <input type="text" placeholder="Search Title" class="form-control form-control-sm" />
                    </th>
                    <th></th>
                    <th>
                        <input type="date" class="form-control form-control-sm" />
                    </th>
                    <th>
                        <input type="text" placeholder="Search Location" class="form-control form-control-sm" />
                    </th>
                    <th>
                        <select class="form-select form-select-sm">
                            <option value="">All</option>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </th>
                    <th></th>
                    <th>
                        <select class="form-select form-select-sm">
                            <option value="">All</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Title</td>
                        <td>@e.Description</td>
                        <td>@e.EventDate.ToString("dd MMM yyyy")</td>
                        <td>@e.Location</td>

                        <!-- Paid -->
                        <td>
                            @if (e.IsPaid)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>

                        <!-- Price -->
                        <td>
                            @(e.Price.HasValue? e.Price.Value.ToString("C") : "-")
                        </td>

                        <!-- Active Status -->
                        <td>
                            @if (e.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>

                        <!-- Created -->
                        <td>@e.CreatedAt.ToString("dd MMM yyyy")</td>

                        <!-- Actions -->
                        <td class="text-end">

                            <!-- View -->
                            <button class="btn btn-sm btn-outline-info"
                                    onclick="openEventModal('@Url.Action("Details", new { id = e.EventId })')">
                                <i class="fa fa-eye"></i>
                            </button>

                            <!-- Edit -->
                            <button class="btn btn-sm btn-outline-warning"
                                    onclick="openEventModal('@Url.Action("Edit", new { id = e.EventId })')">
                                <i class="fa fa-edit"></i>
                            </button>

                            <!-- Activate / Deactivate -->
                            @if (e.IsActive)
                            {
                                <button class="btn btn-sm btn-outline-secondary"
                                        onclick="toggleEventStatus(@e.EventId, false)">
                                    <i class="fa fa-ban"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-success"
                                        onclick="toggleEventStatus(@e.EventId, true)">
                                    <i class="fa fa-check"></i>
                                </button>
                            }

                            <!-- Delete -->
                            <button class="btn btn-sm btn-outline-danger"
                                    onclick="deleteEvent(@e.EventId)">
                                <i class="fa fa-trash"></i>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


