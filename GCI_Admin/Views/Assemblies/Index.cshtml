@model GCI_Admin.Models.AssembliesData

@{
    ViewData["Title"] = "Assemblies Management";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <h2 class="fw-bold mb-1">Church Assemblies</h2>
        <p class="text-muted mb-0">Manage church branches and assembly leadership</p>
    </div>
    <div class="col-md-4 d-flex justify-content-end">
        <button class="btn btn-primary btn-lg" id="openAddModalBtn">
            <i class="fa fa-plus-circle me-2"></i>Create New Assembly
        </button>
    </div>
</div>

<!-- Tabs Navigation -->
<ul class="nav nav-tabs mb-4" id="assemblyTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="assemblies-tab" data-bs-toggle="tab" data-bs-target="#assemblies" type="button" role="tab" aria-controls="assemblies" aria-selected="true">
            <i class="fa fa-building me-2"></i>Assemblies
            <span class="badge bg-primary ms-2" id="assembliesCount">@Model.Assembly?.Count</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="leaders-tab" data-bs-toggle="tab" data-bs-target="#leaders" type="button" role="tab" aria-controls="leaders" aria-selected="false">
            <i class="fa fa-users me-2"></i>Assembly Leaders
            <span class="badge bg-primary ms-2" id="leadersCount">@Model.AssemblyLeader?.Count</span>
        </button>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content" id="assemblyTabsContent">

    <!-- Assemblies Tab -->
    <div class="tab-pane fade show active" id="assemblies" role="tabpanel" aria-labelledby="assemblies-tab">

        <!-- Quick Stats for Assemblies -->
        <div class="row g-3 mb-4">
            <div class="col-md-4 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-building text-primary fa-2x"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="text-muted mb-1">Total Assemblies</h6>
                            <h3 class="fw-bold mb-0" id="totalAssemblies">@Model.Assembly?.Count</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-map-marker text-success fa-2x"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="text-muted mb-1">Locations</h6>
                            <h3 class="fw-bold mb-0" id="totalLocations">@(Model.Assembly?.Select(a => a.Location).Distinct().Count() ?? 0)</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                            <i class="fa fa-calendar text-info fa-2x"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="text-muted mb-1">Active Leaders</h6>
                            <h3 class="fw-bold mb-0" id="activeLeaders">@(Model.AssemblyLeader?.Count(l => l.IsActive) ?? 0)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Bar for Assemblies -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="fa fa-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" id="assemblySearch" placeholder="Search assemblies...">
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <button class="btn btn-outline-secondary me-2" onclick="clearAssemblyFilters()">
                            <i class="fa fa-times me-1"></i>Clear
                        </button>
                        <button class="btn btn-primary" onclick="applyAssemblyFilters()">
                            <i class="fa fa-filter me-1"></i>Apply
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assemblies Table -->
        <div id="assembliesTableContainer">
            @await Html.PartialAsync("_AssembliesTable", Model.Assembly)
        </div>
    </div>

    <!-- Assembly Leaders Tab -->
    <div class="tab-pane fade" id="leaders" role="tabpanel" aria-labelledby="leaders-tab">

        <!-- Quick Stats for Leaders -->
        <div class="row g-3 mb-4">
            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total Leaders</h6>
                        <h3 class="fw-bold mb-0" id="totalLeaders">@Model.AssemblyLeader?.Count</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Active</h6>
                        <h3 class="fw-bold mb-0 text-success" id="activeLeadersCount">@(Model.AssemblyLeader?.Count(l => l.IsActive) ?? 0)</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Inactive</h6>
                        <h3 class="fw-bold mb-0 text-secondary" id="inactiveLeadersCount">@(Model.AssemblyLeader?.Count(l => !l.IsActive) ?? 0)</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Assemblies</h6>
                        <h3 class="fw-bold mb-0" id="totalAssembliesForLeaders">@Model.Assembly?.Count</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Leaders Table -->
        <div id="leadersTableContainer">
            @await Html.PartialAsync("_AssemblLeadersTable", Model.AssemblyLeader)
        </div>
    </div>
</div>

<!-- Assembly Modal (keep existing modal) -->
<div class="modal fade" id="assemblyModal" tabindex="-1" aria-labelledby="assemblyModalLabel" aria-hidden="true">
    <!-- Modal content remains the same -->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assemblyModalLabel">
                    <i class="fa fa-building me-2"></i>
                    <span id="modalTitle">Add New Assembly</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="assemblyModalBody">
                <form id="assemblyForm">
                    <div class="mb-3">
                        <label for="assemblyName" class="form-label">Assembly Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="assemblyName" name="Name" placeholder="Enter assembly name" required>
                    </div>
                    <div class="mb-3">
                        <label for="assemblyLocation" class="form-label">Location <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="assemblyLocation" name="Location" placeholder="Enter location" required>
                    </div>
                    <div class="mb-3">
                        <label for="assemblyDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="assemblyDescription" name="Description" rows="3" placeholder="Optional description"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="assemblyEmail" class="form-label">Email (Optional)</label>
                        <input type="email" class="form-control" id="assemblyEmail" name="ContactEmail" placeholder="Enter email">
                    </div>
                    <div class="mb-3">
                        <label for="assemblyPhone" class="form-label">Phone (Optional)</label>
                        <input type="text" class="form-control" id="assemblyPhone" name="ContactPhone" placeholder="Enter phone number">
                    </div>
                </form>
                <div class="text-center p-4 d-none" id="assemblyLoading">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitAssemblyForm()" id="saveAssemblyBtn">
                    <i class="fa fa-save me-1"></i>Save Assembly
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let assemblies = [];
        let leaders = [];

               $(document).ready(function () {
            // Load data and initialize tables
            loadData();
            initializeDataTables();
            setupEventHandlers();

            // Update Add button on initial load
            updateAddButton();

            // Handle tab switching
            $('#assemblyTabs button').on('shown.bs.tab', function (e) {
                const tabId = $(e.target).attr('id');

                // Adjust DataTables for the active tab
                if (tabId === 'leaders-tab') {
                    if ($.fn.DataTable.isDataTable('#assemblyLeadersTable')) {
                        $('#assemblyLeadersTable').DataTable().columns.adjust().draw();
                    }
                } else if (tabId === 'assemblies-tab') {
                    if ($.fn.DataTable.isDataTable('#assembliesTable')) {
                        $('#assembliesTable').DataTable().columns.adjust().draw();
                    }
                }

                // Update the Add button text and click behavior
                updateAddButton();
            });

            // Function to update the Add button based on active tab
            function updateAddButton() {
                const activeTabId = $('#assemblyTabs .nav-link.active').attr('id');
                const $button = $('#openAssemblyModalBtn'); // same button for both tabs

                if (activeTabId === 'assemblies-tab') {
                    $button.html('<i class="fa fa-plus-circle me-2"></i>Create New Assembly');
                    $button.off('click').on('click', function () {
                        $('#assemblyModal').modal('show');
                        $('#assemblyForm')[0].reset();
                        $('#assemblyLoading').addClass('d-none');
                        $('#saveAssemblyBtn').prop('disabled', false);
                        $('#modalTitle').text('Add New Assembly');
                    });
                } else if (activeTabId === 'leaders-tab') {
                    $button.html('<i class="fa fa-plus-circle me-2"></i>Create New Assembly Leader');
                    $button.off('click').on('click', function () {
                        $('#leaderModal').modal('show'); // make sure this modal exists
                        $('#leaderForm')[0].reset();
                        $('#leaderLoading').addClass('d-none');
                        $('#saveLeaderBtn').prop('disabled', false);
                        $('#modalTitle').text('Add New Assembly Leader');
                    });
                }
            }
        });

        function setupEventHandlers() {
            $('#openAssemblyModalBtn').on('click', function (e) {
                e.preventDefault();
                $('#assemblyModal').modal('show');
                $('#assemblyForm')[0].reset();
                $('#assemblyLoading').addClass('d-none');
                $('#saveAssemblyBtn').prop('disabled', false);
                $('#modalTitle').text('Add New Assembly');
            });
        }

        // function loadData() {
        //     Load assemblies
        //     $.get('@Url.Action("GetAssemblies", "Assembly")', function (data) {
        //         assemblies = data;
        //         updateStats();
        //     });

        //     Load leaders if needed
        //     $.get('@Url.Action("GetAssemblyLeaders", "Assembly")', function (data) {
        //         leaders = data;
        //         updateLeaderStats();
        //     });
        // }

        function updateStats() {
            if (assemblies && assemblies.length > 0) {
                const now = new Date();
                const currentMonth = now.getMonth();
                const currentYear = now.getFullYear();

                const monthAssemblies = assemblies.filter(a => {
                    const created = new Date(a.createdAt);
                    return created.getMonth() === currentMonth &&
                           created.getFullYear() === currentYear;
                }).length;

                const uniqueLocations = [...new Set(assemblies.map(a => a.location))];

                $('#totalAssemblies').text(assemblies.length);
                $('#assembliesCount').text(assemblies.length);
                $('#totalAssembliesForLeaders').text(assemblies.length);
                $('#totalLocations').text(uniqueLocations.length);
                $('#monthAssemblies').text(monthAssemblies);
            }
        }

        function updateLeaderStats() {
            if (leaders && leaders.length > 0) {
                const activeCount = leaders.filter(l => l.isActive).length;
                const inactiveCount = leaders.length - activeCount;

                $('#leadersCount').text(leaders.length);
                $('#totalLeaders').text(leaders.length);
                $('#activeLeadersCount').text(activeCount);
                $('#activeLeaders').text(activeCount);
                $('#inactiveLeadersCount').text(inactiveCount);
            }
        }

        function initializeDataTables() {
            // Initialize Assemblies DataTable
            if ($.fn.DataTable.isDataTable('#assembliesTable')) {
                $('#assembliesTable').DataTable().destroy();
            }

            $('#assembliesTable').DataTable({
                pageLength: 10,
                language: {
                    search: "Search assemblies:",
                    lengthMenu: "Show _MENU_ assemblies",
                    info: "Showing _START_ to _END_ of _TOTAL_ assemblies",
                    emptyTable: "No assemblies available"
                },
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false,
                        searchable: false
                    }
                ]
            });

            // Initialize Leaders DataTable
            if ($.fn.DataTable.isDataTable('#assemblyLeadersTable')) {
                $('#assemblyLeadersTable').DataTable().destroy();
            }

            $('#assemblyLeadersTable').DataTable({
                pageLength: 10,
                language: {
                    search: "Search leaders:",
                    lengthMenu: "Show _MENU_ leaders",
                    info: "Showing _START_ to _END_ of _TOTAL_ leaders",
                    emptyTable: "No assembly leaders found"
                },
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        }

        // Assembly functions
        function applyAssemblyFilters() {
            const search = $('#assemblySearch').val();
            const table = $('#assembliesTable').DataTable();
            table.search(search).draw();
        }

        function clearAssemblyFilters() {
            $('#assemblySearch').val('');
            const table = $('#assembliesTable').DataTable();
            table.search('').draw();
        }

        function reloadAssembliesTable() {
            $('#assembliesTableContainer').load('@Url.Action("AssembliesTable", "Assembly")', function () {
                initializeDataTables();
                loadData();
            });
        }

        function reloadLeadersTable() {
            $('#leadersTableContainer').load('@Url.Action("LeadersTable", "Assembly")', function () {
                initializeDataTables();
                loadData();
            });
        }

        function deleteAssembly(id) {
            Swal.fire({
                title: "Are you sure?",
                text: "This will permanently delete this assembly.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, delete it",
                confirmButtonColor: "#d33"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Delete", "Assembly")', { id: id }, function (response) {
                        if (response.success) {
                            Swal.fire("Deleted!", response.message, "success")
                                .then(() => reloadAssembliesTable());
                        } else {
                            Swal.fire("Error", response.message, "error");
                        }
                    });
                }
            });
        }

        // Leader functions
        function editLeader(id) {
            window.location.href = '@Url.Action("Edit", "AssemblyLeader")/' + id;
        }

        function viewLeader(id) {
            window.location.href = '@Url.Action("Details", "AssemblyLeader")/' + id;
        }

        async function toggleLeaderStatus(id, setActive) {
            var action = setActive ? 'activate' : 'deactivate';
            if (!confirm(`Are you sure you want to ${action} this assembly leader?`)) return;

            const response = await fetch('@Url.Action("ToggleStatus", "AssemblyLeader")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({
                    id: id,
                    isActive: setActive
                })
            });

            const result = await response.json();

            if (result.success) {
                Swal.fire("Success!", `Leader ${action}d successfully.`, "success")
                    .then(() => reloadLeadersTable());
            } else {
                Swal.fire("Error", result.message || `Failed to ${action} leader.`, "error");
            }
        }

        async function deleteLeader(id) {
            if (!confirm("Are you sure you want to delete this assembly leader? This action cannot be undone.")) return;

            const response = await fetch('@Url.Action("Delete", "AssemblyLeader")/' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            });

            if (response.ok) {
                Swal.fire("Deleted!", "Leader deleted successfully.", "success")
                    .then(() => reloadLeadersTable());
            } else {
                const result = await response.json();
                Swal.fire("Error", result.message || "Failed to delete assembly leader.", "error");
            }
        }

        function submitAssemblyForm(e) {
            if (e) e.preventDefault();

            const form = document.getElementById('assemblyForm');

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const dto = {
                Name: $('#assemblyName').val()?.trim() || "",
                Location: $('#assemblyLocation').val()?.trim() || "",
                Description: $('#assemblyDescription').val()?.trim() || "",
                ContactEmail: $('#assemblyEmail').val()?.trim() || null,
                ContactPhone: $('#assemblyPhone').val()?.trim() || null
            };

            $('#saveAssemblyBtn').prop('disabled', true);
            $('#assemblyLoading').removeClass('d-none');

            $.ajax({
                url: '/Assemblies/SubmitNewAssembly',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                data: JSON.stringify(dto),

                success: function (response) {
                    $('#assemblyLoading').addClass('d-none');
                    $('#saveAssemblyBtn').prop('disabled', false);

                    if (response.isSuccess) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Assembly created successfully!'
                        }).then(() => {
                            $('#assemblyModal').modal('hide');
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', response.message || 'Failed to create assembly.', 'error');
                    }
                },

                error: function (xhr) {
                    $('#assemblyLoading').addClass('d-none');
                    $('#saveAssemblyBtn').prop('disabled', false);

                    let message = "An unexpected error occurred.";
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }

                    Swal.fire('Error', message, 'error');
                }
            });
        }

        // Make functions globally available
        window.deleteAssembly = deleteAssembly;
        window.editAssembly = editAssembly;
        window.viewAssembly = viewAssembly;
        window.editLeader = editLeader;
        window.viewLeader = viewLeader;
        window.toggleLeaderStatus = toggleLeaderStatus;
        window.deleteLeader = deleteLeader;
        window.applyAssemblyFilters = applyAssemblyFilters;
        window.clearAssemblyFilters = clearAssemblyFilters;
    </script>

    <style>
        .stat-card {
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }

            .stat-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.1) !important;
            }

        .nav-tabs .nav-link {
            font-weight: 500;
            padding: 0.75rem 1.5rem;
        }

            .nav-tabs .nav-link.active {
                border-bottom: 3px solid #0d6efd;
            }

        .badge {
            font-size: 0.75rem;
        }
    </style>
}