@model List<GCI_Admin.Models.GECMember>

<div class="card shadow-sm">
    <div class="table-responsive p-3">
        <table id="gecMembersTable" class="table table-striped table-hover align-middle datatable">

            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Position</th>
                    <th>Start Date</th>
                    <th class="text-end">Actions</th>
                </tr>

                <!-- Filter Row -->
                <tr>
                    <th></th>
                    <th>
                        <input type="text" placeholder="Search Name" class="form-control form-control-sm" />
                    </th>
                    <th>
                        <input type="text" placeholder="Search Phone" class="form-control form-control-sm" />
                    </th>
                    <th>
                        <input type="text" placeholder="Search Email" class="form-control form-control-sm" />
                    </th>
                    <th>
                        <select class="form-select form-select-sm">
                            <option value="">All</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </th>
                    <th>
                        <input type="text" placeholder="Search Position" class="form-control form-control-sm" />
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>


                @if (Model != null && Model.Any())
                {

                    int count = 1;

                    foreach (var m in Model)
                    {
                        <tr>
                            <td>@count</td>

                            <td>
                                @($"{m.Member?.FirstName} {m.Member?.OtherNames}")
                            </td>

                            <td>@m.Member?.Phone</td>
                            <td>@m.Member?.Email</td>

                            <!-- Gender Badge -->
                            <td>
                                @if (m.Member?.Gender == "Male")
                                {
                                    <span class="badge bg-primary">Male</span>
                                }
                                else if (m.Member?.Gender == "Female")
                                {
                                    <span class="badge bg-info text-dark">Female</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">-</span>
                                }
                            </td>

                            <td>@m.PositionTitle</td>

                            <td>@m.StartDate.ToString("dd MMM yyyy")</td>

                            <!-- Actions -->
                            <td class="text-end">

                                <!-- View -->
                                <button class="btn btn-sm btn-outline-info"
                                        onclick="openModal('@Url.Action("Profile", "GECMember", new { id = m.GECId })')">
                                    <i class="fa fa-eye"></i>
                                </button>

                                <!-- Edit -->
                                <button class="btn btn-sm btn-outline-warning"
                                        onclick="openModal('@Url.Action("Edit", "GECMember", new { id = m.GECId })')">
                                    <i class="fa fa-edit"></i>
                                </button>

                                <!-- Delete -->
                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="deleteGECMember(@m.GECId)">
                                    <i class="fa fa-trash"></i>
                                </button>

                            </td>
                        </tr>

                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td></td>
                        <td class="text-center text-muted">No GEC Members Found</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
