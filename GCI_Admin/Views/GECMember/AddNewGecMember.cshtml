@model GCI_Admin.Models.DTOs.GECMemberDto

@{
    ViewData["Title"] = "Add New GEC Member";
    var members = ViewBag.Members as List<GCI_Admin.Models.Member>;
    var positions = ViewBag.Positions as List<string>;
}

<h3 class="mb-4">Add New GEC Member</h3>

<form id="addGecMemberForm" method="post" asp-action="Create" asp-controller="GECMember">
    <div class="row g-3">
        <!-- Member Selection -->
        <div class="col-md-6">
            <label for="MemberId" class="form-label">Select Member</label>
            <select id="MemberId" name="MemberId" class="form-select selectpicker" data-live-search="true" required>
                <option value="">-- Select Member --</option>
                @foreach (var m in members)
                {
                    <option value="@m.Id">@m.FirstName @m.OtherNames</option>
                }
            </select>
        </div>

        <!-- Position Selection -->
        <div class="col-md-6">
            <label for="PositionTitle" class="form-label">Position</label>
            <select id="PositionTitle" name="PositionTitle" class="form-select" required>
                <option value="">-- Select Position --</option>
                @foreach (var pos in positions)
                {
                    <option value="@pos">@pos</option>
                }
            </select>
        </div>

        <!-- Bio -->
        <div class="col-12">
            <label for="Bio" class="form-label">Bio</label>
            <textarea id="Bio" name="Bio" class="form-control" rows="3" placeholder="Enter member bio"></textarea>
        </div>

        <!-- Start Date -->
        <div class="col-md-6">
            <label for="StartDate" class="form-label">Start Date</label>
            <input type="date" id="StartDate" name="StartDate" class="form-control" required />
        </div>

        <!-- End Date -->
        <div class="col-md-6">
            <label for="EndDate" class="form-label">End Date</label>
            <input type="date" id="EndDate" name="EndDate" class="form-control" />
        </div>

        <!-- Is Active -->
        <div class="col-12">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" checked />
                <label class="form-check-label" for="IsActive">Active</label>
            </div>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Add GEC Member</button>
        <a href="@Url.Action("Index", "GECMember")" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.selectpicker').selectpicker(); // enable live search for members
        });

        // Handle form submission via AJAX
        $('#addGecMemberForm').submit(async function (e) {
            e.preventDefault();
            const form = $(this);
            const data = form.serialize();

            const response = await fetch('@Url.Action("Create", "GECMember")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: data
            });

            const result = await response.json();
            if (response.ok) {
                alert(result.message || "GEC Member added successfully!");
                window.location.href = '@Url.Action("Index", "GECMember")';
            } else {
                alert(result || "Failed to add GEC Member");
            }
        });
    </script>
}
