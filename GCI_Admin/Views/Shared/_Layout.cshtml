<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GCI_Admin</title>

    <!-- ================= CSS ================= -->
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>

    <!-- ================= SIDEBAR ================= -->
    <div class="sidebar">

        <a href="@Url.Action("Index", "Home")">
            <i class="fa fa-home me-2"></i> Dashboard
        </a>

        <!-- MEMBERS -->
        <a data-bs-toggle="collapse" href="#membersMenu">
            <i class="fa fa-users me-2"></i> Members
        </a>
        <div id="membersMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "Members")">All Members</a>
            <a href="@Url.Action("Approvals", "Members")">Certification Approvals</a>
            <a href="@Url.Action("PrivacyRequests", "Members")">Privacy Requests</a>
        </div>

        <!-- CHURCH STRUCTURE -->
        <a data-bs-toggle="collapse" href="#churchMenu">
            <i class="fa fa-church me-2"></i> Church Structure
        </a>
        <div id="churchMenu" class="collapse submenu">
            @* <a href="@Url.Action("Index", "Branches")">Assemblies</a> *@
            <a href="@Url.Action("Index", "Assemblies")">Assemblies</a>
            <a href="@Url.Action("Index", "GrowthCenters")">Growth Centers</a>
        </div>

        <!-- LEADERSHIP -->
        <a data-bs-toggle="collapse" href="#leadershipMenu">
            <i class="fa fa-user-tie me-2"></i> Leadership
        </a>
        <div id="leadershipMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "GECMember")">Central Leadership</a>
            <a href="@Url.Action("Index", "Elders")">Elders</a>
            <a href="@Url.Action("Index", "Deacons")">Deacons</a>
            <a href="@Url.Action("Index", "MinistryLeaders")">Ministry Leaders</a>
            <a href="@Url.Action("Index", "BranchLeaders")">Branch Leaders</a>
            <a href="@Url.Action("Index", "GrowthCenterLeaders")">Growth Center Leaders</a>
        </div>

        <!-- MINISTRIES -->
        <a data-bs-toggle="collapse" href="#ministriesMenu">
            <i class="fa fa-cross me-2"></i> Ministries
        </a>
        <div id="ministriesMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "Ministries")">All Ministries</a>
            <a href="@Url.Action("Requests", "Ministries")">Join Requests</a>
            <a href="@Url.Action("Members", "Ministries")">Ministry Members</a>
        </div>

        <!-- EVENTS -->
        <a data-bs-toggle="collapse" href="#eventsMenu">
            <i class="fa fa-calendar me-2"></i> Events
        </a>
        <div id="eventsMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "Event")">Events</a>
            <a href="@Url.Action("Calendar", "Event")">Annual Calendar</a>
            <a href="@Url.Action("EventRegistrations", "Event")">Registrations</a>
        </div>

        <!-- CONTENT -->
        <a data-bs-toggle="collapse" href="#contentMenu">
            <i class="fa fa-bullhorn me-2"></i> Content & Media
        </a>
        <div id="contentMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "Announcements")">Announcements</a>
            <a href="@Url.Action("Index", "BibleVerse")">Daily Bible Verse</a>
            <a href="@Url.Action("Index", "Sermons")">Sermons</a>
            <a href="@Url.Action("Index", "Notifications")">Notifications</a>
        </div>

        <!-- GIVING -->
        <a data-bs-toggle="collapse" href="#givingMenu">
            <i class="fa fa-money-bill-wave me-2"></i> Digital Giving
        </a>
        <div id="givingMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "Donations")">Payments</a>
            <a href="@Url.Action("Reports", "Donations")">Reports</a>
        </div>

        <!-- SECURITY -->
        <a data-bs-toggle="collapse" href="#securityMenu">
            <i class="fa fa-shield-alt me-2"></i> Security & RBAC
        </a>
        <div id="securityMenu" class="collapse submenu">
            <a href="@Url.Action("Index", "Roles")">Roles</a>
            <a href="@Url.Action("Index", "Admins")">Admin Accounts</a>
            <a href="@Url.Action("Index", "AuditLogs")">Audit Logs</a>
        </div>

        <!-- SETTINGS -->
        <a href="@Url.Action("Index", "Settings")">
            <i class="fa fa-cogs me-2"></i> System Settings
        </a>

    </div>

    <!-- ================= TOPBAR ================= -->
    <div class="topbar">
        <div class="church-logo">
            <img src="~/images/church-logo.png" alt="Logo" />
            <span>GCI Church Admin Console</span>
        </div>

        <div class="dropdown">
            <a class="text-white dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown">
                <i class="fa fa-user-circle fa-2x me-2"></i>
                <span>@User.Identity?.Name</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                        <i class="fa fa-user me-2"></i> View Profile
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                        <i class="fa fa-sign-out-alt me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- ================= CONTENT ================= -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="text-center py-3">
        &copy; 2026 - GCI_Admin | GCI Church
    </footer>

    <!-- ================= JAVASCRIPT ================= -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- DataTables Buttons -->
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <!-- Export Dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <!-- Global DataTables Init -->
    <script src="~/js/datatables-global.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
